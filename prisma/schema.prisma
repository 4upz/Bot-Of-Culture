generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model RPSGame {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  interactionId  String @unique
  userId  String
  guildId String
  choice  String
}

model MovieReview {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  movieId String  
  guildId String
  score Int
  comment String?
  userId String
  username String
  createdAt DateTime @default(now()) @map("_createdAt")

  @@index([movieId, guildId, userId])
}

model SeriesReview {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  seriesId String
  guildId String
  score Int
  comment String?
  userId String
  username String
  createdAt DateTime @default(now()) @map("_createdAt")

  @@index([seriesId, guildId, userId])
}

model GameReview {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  gameId String
  guildId String
  score Int
  hoursPlayed Int?
  comment String?
  userId String
  username String
  createdAt DateTime @default(now()) @map("_createdAt")

  @@index([gameId, guildId, userId])
}

enum Replayability {
  LOW
  MEDIUM
  HIGH
}

model MusicReview {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  albumId String
  guildId String
  score Int
  replayability Replayability
  comment String?
  userId String
  username String
  createdAt DateTime @default(now()) @map("_createdAt")

  @@index([albumId, guildId, userId])
}