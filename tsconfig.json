{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": ["es2019"],
        "esModuleInterop": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "outDir": "./dist",
        "experimentalDecorators": true,
        "target": "ES5",
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "declaration": true,
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}